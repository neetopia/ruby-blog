<h1>All Tags</h1>

<ul id="tags">
  <% @tags.each do |tag| %>
    <li>
      <span><%= link_to tag.name, tag_path(tag), class: 'tag_name', id: 'tag_#{tag.id}' %></span>
      <% if logged_in? %>
          <span><%= link_to "delete", tag_path(tag), method: :delete, data: {confirm: "Really delete the tag?"}%><span>
      <% end %>
    </li>
  <% end %>
</ul>
